{
    "manifest_version": 3,
    "name": "MBBlocker",
    "description": "Site Blocker",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "assets/block.png"
    },
    "content_scripts": [
        {
            "js": ["assets/sourceContent.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["block.html"],
            "matches": ["https://*/*", "http://*/*"]
        }
    ],
    "permissions": ["storage", "activeTab"]
}
