{
    "manifest_version": 3,
    "name": "MBBlocker",
    "description": "Site Blocker",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "assets/block.png"
    },
    "content_scripts": [
        {
            "js": ["assets/block.js"],
            "matches": ["https://developer.chrome.com/docs/extensions/*"]
        }
    ]
}
